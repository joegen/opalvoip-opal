{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make OPAL",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}/../ptlib",
                    "OPALDIR": "${workspaceFolder}"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "all"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean OPAL",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}/../ptlib",
                    "OPALDIR": "${workspaceFolder}"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "clean"
            ]
        }
    ]
}
