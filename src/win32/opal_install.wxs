                <ComponentRef Id='ImageMagickZLIB' />
                <ComponentRef Id='ImageMagickTTF' />
                <ComponentRef Id='ImageMagickLCMS' />
                <ComponentRef Id='ImageMagickLQR' />
                <ComponentRef Id='ImageMagickGLIB' />
