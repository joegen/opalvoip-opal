                        <?ifdef JPEGDir ?>
                            <Component Id='JPEG'
                                       Guid='*'>
                                <File Id='JPEG_DLL'
                                      Name='JPEG62.DLL'
                                      Source='$(var.JPEGDir)\JPEG62.DLL'
                                      KeyPath='yes' />
                            </Component>
                        <?endif?>
                        <?ifdef SaslDir ?>
                            <Component Id='SASL'
                                       Guid='*'>
                                <File Id='SASL_DLL'
                                      Name='LIBSASL.DLL'
                                      Source='$(var.SaslDir)\LIBSASL.DLL'
                                      KeyPath='yes' />
                            </Component>
                        <?endif?>
                        <?ifdef LDAPDir ?>
                            <Component Id='OpenLDAP'
                                       Guid='*'>
                                <File Id='OPENLDAP_DLL'
                                      Name='OPENLDAP.DLL'
                                      Source='$(var.LDAPDir)\OPENLDAP.DLL'
                                      KeyPath='yes' />
                            </Component>
                        <?endif?>
                        <Component Id='OpenSSL1'
                                   Win64="$(var.IsWin64)"
                                   Guid='*'>
                            <File Id='LIBEAY32_DLL'
                                  Name='LIBEAY32.DLL'
                                  Source='$(var.SSLDir)\LIBEAY32.DLL'
                                  KeyPath='yes' />
                        </Component>
                        <Component Id='OpenSSL2'
                                   Win64="$(var.IsWin64)"
                                   Guid='*'>
                            <File Id='SSLEAY32_DLL'
                                  Name='SSLEAY32.DLL'
                                  Source='$(var.SSLDir)\SSLEAY32.DLL'
                                  KeyPath='yes' />
                        </Component>
                        <?ifdef WxDir ?>
                            <Component Id='WxXRC'
                                       Win64="$(var.IsWin64)"
                                       Guid='*'>
                                <File Id='WXMSW$(var.WxVer)U_XRC_DLL'
                                      Name='WXMSW$(var.WxVer)U_XRC_VC$(var.WxPlatform).DLL'
