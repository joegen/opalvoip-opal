                                  Source='$(var.PluginReleaseDir)\speex_ptplugin.dll'
                                  KeyPath='yes' />
                        </Component>
                        <Component Id='H.261'
                                   Win64="$(var.IsWin64)"
                                   Guid='*'>
                            <File Id='H.261_DLL'
                                  Name='h261_vic_ptplugin.dll'
                                  Source='$(var.PluginReleaseDir)\h261_vic_ptplugin.dll'
                                  KeyPath='yes' />
                        </Component>
                        <?ifdef FFMPEGDir ?>
