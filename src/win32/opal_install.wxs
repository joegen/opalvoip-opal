                        <Component Id='PTLib'
                                   Win64="$(var.IsWin64)"
                                   Guid='*'>
                            <File Id='PTLib_DLL'
                                  Name='$(var.PTLibName).DLL'
                                  Source='$(var.PTLibDir)\lib\$(var.PTLibName).DLL'
                                  KeyPath='yes' />
                        </Component>
                        <?ifdef ImageMagickDir ?>
                            <Component Id='ImageMagickWand'
                                       Win64="$(var.IsWin64)"
                                       Guid='*'>
                                <File Id='CORE_RL_MAGICKWAND_DLL'
                                      Name='CORE_RL_MAGICKWAND_.DLL'
